<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_sticky"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.longge.thirdpartdemo.eventbus.StickyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sticky1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粘性事件1" />

        <Button
            android:id="@+id/btn_sticky2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粘性事件2" />

        <Button
            android:id="@+id/btn_sticky3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粘性事件3" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册成为订阅者" />

    <TextView
        android:id="@+id/tv_showMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f00" />
</LinearLayout>
