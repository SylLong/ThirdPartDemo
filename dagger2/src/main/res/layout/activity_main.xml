<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.longge.dagger2.ui.MainActivity">

    <Button
        android:id="@+id/btn_inject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only Inject"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btn_prorier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module Inject 优先级"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_singleton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单例测试"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_dependence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="依赖Component"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="包含SubComponent"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_extend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="继承Component"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方法注入"
        android:textAllCaps="false" />
</LinearLayout>
